<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fastcurrencyconverter.mient.com.fastcurrencyconverter.fragments.MainFragment">

    <LinearLayout
        android:id="@+id/main_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:id="@+id/main_display"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingBottom="5dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:paddingRight="5dp"
                android:gravity="right"
                android:backgroundTint="@color/textIcons">

                <TextView
                    android:id="@+id/last_update_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingRight="20dp"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:text="Last update: 09.11.2016"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_assessment_white_24dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_alarm_on_white_24dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_settings_white_24dp"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_height="60dp">

                <ImageView
                    android:id="@+id/main_currency_img"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:layout_weight="1"
                    android:src="@drawable/ron"/>

                <TextView
                    android:id="@+id/main_currency_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:layout_weight="4"
                    android:text="Romanian Leu"/>

                <TextView
                    android:id="@+id/main_currency_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:layout_weight="1"
                    android:text="LEU"/>

            </LinearLayout>

            <EditText
                android:id="@+id/changed_amount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:paddingRight="25dp"
                android:textSize="40sp"
                android:text="0"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_currency_list"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/round_corners"
            android:backgroundTint="@color/textIcons">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10">

                <include layout="@layout/content_currency_list" />

            </android.support.v4.widget.NestedScrollView>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_add_circle_outline_black_24dp"
                android:text="Add Currency"/>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
