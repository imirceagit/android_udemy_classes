<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mient.flaborfit.flaborfit.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#2ca5f5"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:id="@+id/weightBtn">

        <TextView
            android:text="30%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textSize="36sp"
            android:paddingRight="5dp"
            android:gravity="right"
            android:textColor="@android:color/white" />

        <TextView
            android:text="Weight Lifting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:paddingLeft="7dp"
            android:textSize="18sp"
            android:layout_above="@+id/textView4"
            android:layout_alignParentStart="false"
            android:textColor="@android:color/white" />

        <TextView
            android:text="Do you even lift?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:paddingLeft="7dp"
            android:textSize="14sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="5dp"
            android:textColor="@android:color/white" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/weight"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="10 sets"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:gravity="right"
            android:paddingRight="5dp"
            android:padding="5dp"
            android:layout_width="90dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#20000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:textSize="18sp"
            android:textColor="@android:color/white" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#916bcd"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:id="@+id/yogaBtn">

        <TextView
            android:text="15%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textSize="36sp"
            android:paddingRight="5dp"
            android:gravity="right"
            android:textColor="@android:color/white" />

        <TextView
            android:text="Yoga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:paddingLeft="7dp"
            android:textSize="18sp"
            android:layout_above="@+id/textView4"
            android:layout_alignParentStart="false"
            android:textColor="@android:color/white" />

        <TextView
            android:text="Namaste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:paddingLeft="7dp"
            android:textSize="14sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="5dp"
            android:textColor="@android:color/white" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/lotus"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="1 hour"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:gravity="right"
            android:paddingRight="5dp"
            android:padding="5dp"
            android:layout_width="90dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#20000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:textSize="18sp"
            android:textColor="@android:color/white" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#52ad56"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:id="@+id/cardioBtn">

        <TextView
            android:text="0%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textSize="36sp"
            android:paddingRight="5dp"
            android:gravity="right"
            android:textColor="@android:color/white" />

        <TextView
            android:text="Cardio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:paddingLeft="7dp"
            android:textSize="18sp"
            android:layout_above="@+id/textView4"
            android:layout_alignParentStart="false"
            android:textColor="@android:color/white" />

        <TextView
            android:text="Run bitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:paddingLeft="7dp"
            android:textSize="14sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="5dp"
            android:textColor="@android:color/white" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/heart"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="5 km"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:gravity="right"
            android:paddingRight="5dp"
            android:padding="5dp"
            android:layout_width="90dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#20000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:textSize="18sp"
            android:textColor="@android:color/white" />

    </RelativeLayout>

</LinearLayout>
